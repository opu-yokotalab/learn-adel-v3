<h1>Listing learns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Contents</th>
  </tr>

<% for learn in @learns %>
  <tr>
    <td><%=h learn.name %></td>
    <td><%=h learn.contents %></td>
    <td><%= link_to 'Show', learn %></td>
    <td><%= link_to 'Edit', edit_learn_path(learn) %></td>
    <td><%= link_to 'Destroy', learn, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New learn', new_learn_path %>
