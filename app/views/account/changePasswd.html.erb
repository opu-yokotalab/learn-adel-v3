<h1>パスワード変更</h1>

<%= error_messages_for :user %>

<% form_for :user do |f| -%>
<p><b>ユーザID</b><br/>
<%= f.text_field :login %></p>

<p><b>パスワード</b><br/>
<%= f.password_field :password %></p>

<p><b>パスワード再入力</b><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= f.submit "更新" %></p>
<% end %>

<%= link_to '戻る', :action => 'index' %>
